{
  "DiskProvisioning":"thin",
  "IPAllocationPolicy":"dhcpPolicy",
  "IPProtocol":"IPv4",
  "NetworkMapping": [{
    "Name":"Network 1",
    "Network":"<%= ENV.fetch('ENV_NAME') %>"
  }],
  "PropertyMapping":[
    {"Key":"custom_hostname","Value":"<%= ENV.fetch('ENV_NAME') %>-ops-manager"},
    {"Key":"ip0","Value":"<%= ENV.fetch('OPSMAN_IP') %>"},
    {"Key":"netmask0","Value":"<%= ENV.fetch('NETMASK') %>"},
    {"Key":"gateway","Value":"<%= ENV.fetch('GATEWAY') %>"},
    {"Key":"DNS","Value":"<%= ENV.fetch('DNS') %>"},
    {"Key":"ntp_servers","Value":"<%= ENV.fetch('NTP') %>"},
    {"Key":"admin_password","Value":"<%= ENV.fetch('UBUNTU_PASSWORD') %>"},
    {"Key":"public_ssh_key","Value":"<%= ENV.fetch('PUBLIC_SSH_KEY') %>"}
  ],
  "PowerOn":false,
  "InjectOvfEnv":false,
  "WaitForIP":false
}
